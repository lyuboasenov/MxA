                    IsEnabled="{Binding IsChecked, Source={Reference t_1Enabled}}">
                    <ImageButton.Source>
                        <FontImageSource FontFamily="MD" Glyph="{Static icons:IconFont.Play_arrow}" />
                    </ImageButton.Source>
                </ImageButton>
            </StackLayout>

